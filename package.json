{
  "name": "ibexicon",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint . --fix",
    "preview": "vite preview",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean:data": "rimraf public/wordlists/en/* || true",
    "eval:run": "tsx eval/sim/cli.ts",
    "eval:ci": "tsx eval/sim/cli.ts --lengths 5 --trials 50 --attempts 6 --policies composite --concurrency 2",
    "build:ptab": "tsx eval/ptab/build.ts",
    "add:dataset": "tsx scripts/add-dataset.ts",
    "wasm:dev": "wasm-pack build wasm/ibxwasm --target bundler --out-dir ../../src/wasm/pkg",
    "wasm:build": "wasm-pack build wasm/ibxwasm --target bundler --release --out-dir ../../src/wasm/pkg",
    "postwasm:build": "node scripts/patch-wasm-import.mjs"
  },
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "recharts": "^3.1.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "commander": "^14.0.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "fast-check": "^4.2.0",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.14",
    "tsx": "^4.20.4",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.40.0",
    "vite": "^7.1.2",
    "vitest": "^3.2.4",
    "wasm-pack": "^0.13.1"
  },
  "description": "Any-length Wordle solver with smart explore/exploit, deployable on GitHub Pages.",
  "license": "MIT"
}
